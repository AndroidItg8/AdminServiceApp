<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itg8.com.adminserviceapp.sales.AddSalesPersonActivity"
    tools:showIn="@layout/activity_add_sales_person">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_personName"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:importantForAutofill="noExcludeDescendants"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_personName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:hint="Person Name" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_mobile"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_personName"
        android:layout_marginTop="10dp"
        android:importantForAutofill="noExcludeDescendants"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:hint=" Mobile Number" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_another_mobile"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_mobile"
        android:layout_marginTop="10dp"
        android:importantForAutofill="noExcludeDescendants"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_another_Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:hint=" Another Mobile Number" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_another_mobile"
        android:layout_marginTop="10dp"
        android:importantForAutofill="noExcludeDescendants"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:hint=" Email" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_address"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_email"
        android:layout_marginTop="10dp"
        android:importantForAutofill="noExcludeDescendants"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="4"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:textColor="@color/colorBlack"
            android:gravity="top|left"
            android:textSize="15sp"
            android:hint="Address" />

    </android.support.design.widget.TextInputLayout>

        <ProgressBar
            android:id="@+id/progressView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@+id/input_layout_address"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="save"
        android:layout_below="@+id/progressView"
        android:id="@+id/btn_save" />


    </RelativeLayout>

</ScrollView>
