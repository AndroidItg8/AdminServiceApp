<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itg8.com.adminserviceapp.gst.GSTActivity"
    tools:showIn="@layout/activity_gst">

<RelativeLayout
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_below="@+id/lbl_date"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"

        android:textAllCaps="true"
        android:hint="Details:"
        android:id="@+id/lbl_description"
        android:textColorHint="@color/colorGray"
        android:textStyle="normal" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lbl_description"
    android:layout_marginBottom="10dp">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_back"
        android:weightSum="2">
        <TextView
            android:id="@+id/lbl_gst_payable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="GST payable"
            android:fontFamily="@font/roboto"

            android:textColorHint="@color/colorGray"
            android:textStyle="normal" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="GST Player"
            android:fontFamily="@font/roboto_medium"

            android:textColorHint="@color/colorBlack"
            android:textStyle="bold" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_back"
        android:weightSum="2">
        <TextView
            android:id="@+id/lbl_actual_payable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:hint="Actual payable"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"

            android:textColorHint="@color/colorGray"
            android:textStyle="normal" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_medium"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Actual Player"
            android:textColorHint="@color/colorBlack"
            android:textStyle="bold" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_back"

        android:weightSum="2">
        <TextView
            android:id="@+id/lbl_upload_slip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:hint="Uploaded Slip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/colorGray"
            android:textStyle="normal" />

        <FrameLayout
             android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/lbl_downlaod_slip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:hint="Upload Loaded file path"
                android:fontFamily="@font/roboto_medium"

                android:textColorHint="@color/colorBlack"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="upload"
                android:visibility="gone"
                android:id="@+id/btn_upload" />

        </FrameLayout>


    </TableRow>
</TableLayout>
</RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tab_layout"
        app:tabIndicatorHeight="1dp"
        app:tabTextColor="@color/colorWhite"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabBackground="@color/colorPrimary"
        app:tabGravity="fill" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:id="@+id/viewPager"/>

</RelativeLayout>

