<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itg8.com.adminserviceapp.ticket.TicketDetailsActivity"
    tools:showIn="@layout/activity_ticket_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="08dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="08dp"
            android:fontFamily="@font/roboto"
            android:text="PROVIDING AND INSTALLING THE CCTV CAMERA O ON SPILLWAY OF LOWER WARDHA AT DHANODI(BA) TAL ARVI,DIST WARDHA(M.S.)"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/lbl_title"
            android:layout_marginBottom="04dp"
            android:layout_marginEnd="08dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="04dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_margin="08dp"
            android:fontFamily="@font/roboto_light"
            android:text="PROVIDING AND INSTALLING THE CCTV CAMERA O ON SPILLWAY OF LOWER WARDHA AT DHANODI(BA) TAL ARVI,DIST WARDHA(M.S.)"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/rl_cust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_description"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/bg_box_rl">

            <TextView
                android:id="@+id/lbl_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Customer Details:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lbl_cus_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_cust"
                android:layout_marginBottom="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:layout_toEndOf="@+id/lbl_cus_name"
                android:fontFamily="@font/roboto"
                android:text="17-08-2017:14:09:00"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_cust"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Name:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cus_mobile_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lbl_cust_mobile"
                android:layout_below="@+id/lbl_cus_name_value"
                android:layout_marginEnd="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:layout_toEndOf="@+id/lbl_cust_mobile"
                android:fontFamily="@font/roboto"
                android:text="9823778532"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cust_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lbl_cus_name"
                android:layout_below="@+id/lbl_cus_name_value"
                android:layout_marginEnd="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Mobile:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cust_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lbl_cust_address"
                android:layout_below="@+id/lbl_cust_email"
                android:layout_marginBottom="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:layout_toEndOf="@+id/lbl_cust_address"
                android:fontFamily="@font/roboto"
                android:lines="2"
                android:maxLines="2"
                android:text="WARDHA AT DHANODI(BA) TAL ARVI,DIST WARDHA(M.S.)"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cust_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lbl_cust_mobile"
                android:layout_below="@+id/lbl_cust_email"
                android:layout_marginBottom="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Address:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cust_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lbl_cust_email"
                android:layout_below="@+id/lbl_cust_mobile"
                android:layout_marginBottom="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:layout_toEndOf="@+id/lbl_cust_email"
                android:fontFamily="@font/roboto"
                android:text="abc@gamil.com"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbl_cust_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lbl_cust_address"
                android:layout_below="@+id/lbl_cust_mobile"
                android:layout_marginBottom="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Email:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <!--Engineer Details:-->
        <RelativeLayout
            android:id="@+id/rl_engg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_cust"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_box_rl">

            <TextView
                android:id="@+id/lbl_Engg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="08dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="08dp"
                android:fontFamily="@font/roboto"
                android:text="Engineer Details:"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_Engg">

                <include
                    android:id="@+id/include_pending"
                    layout="@layout/include_rl_pending_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <include
                    android:id="@+id/include_assign"
                    layout="@layout/include_item_assign_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/include_close"
                    layout="@layout/include_item_close_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </FrameLayout>

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>
