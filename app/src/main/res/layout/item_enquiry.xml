<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:fontFamily="@font/roboto"
            android:text="Product Name"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/lbl_personName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_productName"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:fontFamily="@font/roboto"
            android:text="person Name"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lbl_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_personName"
            android:layout_gravity="bottom"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:fontFamily="@font/roboto"
            android:drawableLeft="@drawable/ic_email_drawable"
            android:drawablePadding="10dp"
            android:text="abc@gmail.com"
             android:autoLink="email"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_number"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:fontFamily="@font/roboto"
            android:text="This is short description"
            android:textColor="@color/colorGray"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="visible" />


        <TextView
            android:id="@+id/lbl_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_email"
            android:layout_marginBottom="05dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_phone_call"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:text="9823778522"
            android:textColor="@color/colorBlack" />


    </RelativeLayout>


</android.support.v7.widget.CardView>