<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Ticket Date"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto"

                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/lbl_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/colorGray" />

                <TextView
                    android:id="@+id/lbl_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="7-2017"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorGray" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_invoiceNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="20dp"
                    android:text="Invoice Number:"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_light"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/lbl_invoiceNumber_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="05dp"
                    android:layout_marginEnd="05dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/lbl_invoiceNumber"
                    android:text="#123456@"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/lbl_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_invoiceNumber"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="3"
                    android:lines="3"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:text="This is short description of product problem"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/lbl_rejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="20dp"
                    android:text="Why Rejected??"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@+id/lbl_problem"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lbl_reason_rejected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_rejected"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="3"
                    android:text="This ias the reason behind why this ticket is rejected????"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lbl_engName_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="05dp"
                    android:text="Kumar Ajay"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@+id/lbl_problem"
                    android:textSize="14sp"
                    android:layout_toEndOf="@+id/lbl_engName"
                    android:fontFamily="@font/roboto"
                    android:textStyle="normal"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/lbl_engName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="05dp"
                    android:text="Eng Name:"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/lbl_problem"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_light"
                    android:textStyle="normal"
                    android:visibility="visible" />





            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>